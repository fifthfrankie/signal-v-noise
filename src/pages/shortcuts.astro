---
import "../styles.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Shortcuts · Signal vs Noise</title>
  </head>
  <body>
    <div class="min-h-screen px-5 py-8">
      <div class="max-w-[800px] mx-auto">
        <h1 class="text-lg mb-4 text-neutral-300">Keyboard shortcuts</h1>
        <div class="glass p-4">
          <ul class="space-y-2 text-sm text-neutral-300">
            <li><strong>A</strong> — Focus composer (when not typing)</li>
            <li><strong>Enter</strong> — Add to Signal</li>
            <li><strong>Ctrl+Enter</strong> — Add to Noise</li>
            <li><strong>F</strong> — Focus Signal toggle</li>
            <li><strong>Esc</strong> — Cancel editing</li>
            <li><strong>Drag & Drop</strong> — Reorder and move between Signal/Noise</li>
          </ul>
        </div>
        <div class="mt-6 text-xs text-neutral-500">
          <a href="/" class="hover:underline">Back to app</a>
        </div>
      </div>
    </div>
  </body>
  </html>
